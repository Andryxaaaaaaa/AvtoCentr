<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:text="Сброс пароля"
        android:textColor="@color/black"
        android:textSize="20pt" />
    <EditText
        android:id="@+id/editTextCode"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/rounded_edittext_bg"
        android:backgroundTint="#E7E1E1"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:hint="Введите код"
        android:inputType="text" />
    <Button
        android:id="@+id/buttonstart"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/editTextCode"
        android:layout_marginEnd="25dp"

        android:background="@drawable/dlyabutton"
        android:text="Продолжить"
        android:textColor="#FFFFFF" />
    <TextView
        android:id="@+id/textViewcode"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="45dp"
        android:gravity="center"
        android:layout_below="@+id/buttonstart"
        android:layout_centerInParent="true"
        android:text="Если код не приходит, проверьте корзину спам или все входящие сообщения"
        android:textColor="@color/blue"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/rounded_edittext_bg"
        android:backgroundTint="#E7E1E1"
        android:gravity="center"

        android:hint="Введите email при регистрации"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/resetPasswordButton"
        android:layout_width="343dp"
        android:layout_height="38dp"
        android:layout_below="@id/editTextEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/dlyabutton"
        android:text="Сбросить пароль"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/editTextNewPassword"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/rounded_edittext_bg"
        android:backgroundTint="#E7E1E1"
        android:gravity="center"
        android:hint="Новый пароль"
        android:visibility="gone"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editTextConfirmPassword"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:layout_below="@id/editTextNewPassword"
        android:background="@drawable/rounded_edittext_bg"
        android:backgroundTint="#E7E1E1"
        android:gravity="center"
        android:visibility="gone"
        android:hint="Подтвердите новый пароль"
        android:inputType="textPassword"
         />

    <Button
        android:id="@+id/confirmPasswordButton"
        android:layout_width="343dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_below="@id/editTextConfirmPassword"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:background="@drawable/dlyabutton"
        android:textColor="@color/white"
        android:text="Подтвердить"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:indeterminateTint="@color/gray" />
</RelativeLayout>
